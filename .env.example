# Database connection
MONGODB_URI=mongodb://localhost:27017/ipo-scraper

# Cache settings (seconds)
CACHE_MAX_AGE=3600

# Admin API Authentication
ADMIN_API_TOKEN=your-secure-token-here

# Environment ('development' or 'production')
NODE_ENV=development

# API Server configuration
PORT=3000

# Scraper configuration
DELAY_BETWEEN_REQUESTS=1000
MAX_CONCURRENT_REQUESTS=3
DATA_DIR=./data

# API Security
ADMIN_API_KEY=change_this_to_secure_key

# API caching (seconds)
API_CACHE_TIME=60
USE_REDIS=false
REDIS_URL=redis://localhost:6379

# Resource optimization
DB_POOL_SIZE=10
MEMORY_LIMIT=512
COMPRESSION_LEVEL=6

# Cron job settings
ENABLE_CRONS=false
CRON_LOG_DIR=./logs

# API Settings
REVALIDATE_TIME=3600

# Security Settings
RATE_LIMIT_PUBLIC=60
RATE_LIMIT_ADMIN=300

# Cron Settings
ENABLE_CRON=true
CRON_SCHEDULE="* * * * * *"
CRON_YEAR=2025 